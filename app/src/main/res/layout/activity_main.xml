<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="102dp"
        android:layout_height="79dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/indicahot_logo" />

    <Button
        android:id="@+id/btn_buscar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableTop="@drawable/ic_buscar"
        android:text="Buscar"
        app:layout_constraintEnd_toStartOf="@+id/btn_ofer"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ofer"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableTop="@drawable/ic_ofertas"
        android:text="@string/btn_ofer"
        app:layout_constraintEnd_toStartOf="@+id/btn_rec"
        app:layout_constraintStart_toEndOf="@+id/btn_buscar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_rec"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableTop="@drawable/ic_recomendacoes"
        android:text="Recomendados"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_ofer"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscar"
        app:srcCompat="@drawable/mapa" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="406dp"
        android:layout_height="9dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_red_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_gps"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:drawableTop="@drawable/ic_gps"
        android:text="@string/btn_gps"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_sair_main"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="99dp"
        android:layout_height="87dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>